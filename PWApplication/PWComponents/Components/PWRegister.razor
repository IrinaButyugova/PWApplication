<EditForm Model="RegisterModel" OnSubmit="OnSubmitCallback">
    <PWHeader>Register</PWHeader>
	<DataAnnotationsValidator />
    <PWValidationErrors Errors="Errors"></PWValidationErrors>
	<ValidationSummary />
    <PWInputRow>
        <PWInputComponent Title="Name">
            <InputText id="name" class="form-control" @bind-Value="RegisterModel.Name" />
        </PWInputComponent>
    </PWInputRow>
    <PWInputRow>
        <PWInputComponent Title="Email">
            <InputText class="form-control" @bind-Value="RegisterModel.Email" />
        </PWInputComponent>
    </PWInputRow>
    <PWInputRow>
        <PWInputComponent Title="Password">
            <InputText type="password" class="form-control" @bind-Value="RegisterModel.Password" />
        </PWInputComponent>
    </PWInputRow>
    <PWInputRow>
        <PWInputComponent Title="Confirm password">
            <InputText type="password" class="form-control" @bind-Value="RegisterModel.PasswordConfirm" />
        </PWInputComponent>
    </PWInputRow>
    <PWSubmitButton Title="Register" />
    <PWButton Title="Cancel" OnClickCallback="OnCancelClickCallback" />
</EditForm>
