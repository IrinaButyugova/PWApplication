<EditForm Model="@FilterModel" id="filterForm" OnSubmit="OnClickCallback">
    <PWInputRow>
        <PWFilterComponent Title="Start date">
            <InputDate class="form-control" @bind-Value="FilterModel.StartDate" />
        </PWFilterComponent>
        <PWFilterComponent Title="End date">
            <InputDate class="form-control" @bind-Value="FilterModel.EndDate" />
        </PWFilterComponent>
    </PWInputRow>
    <PWInputRow>
        <PWFilterComponent Title="Correspondent name">
            <InputText id="email" class="form-control" @bind-Value="FilterModel.CorrespondentName" />
        </PWFilterComponent>
    </PWInputRow>
    <PWInputRow>
        <PWFilterComponent Title="Start amount">
            <InputNumber name="Amount" class="form-control" @bind-Value="FilterModel.StartAmount" Min="0"/>
        </PWFilterComponent>
        <PWFilterComponent Title="End amount">
            <InputNumber name="Amount" class="form-control" @bind-Value="FilterModel.EndAmount" Min="0"/>
        </PWFilterComponent>
    </PWInputRow>
    <PWSubmitButton Title="Filter" />
    <PWButton Title="Clear" OnClickCallback="Clear"></PWButton>
</EditForm>