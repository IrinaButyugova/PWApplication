<EditForm Model="LoginModel" OnSubmit="OnSubmitCallback">
    <PWHeader>Login</PWHeader>
    <DataAnnotationsValidator />
    <PWValidationErrors Errors="@Errors"></PWValidationErrors>
    <ValidationSummary />
    <PWInputRow>
        <PWInputComponent Title="Email">
            <InputText id="email" class="form-control" @bind-Value="LoginModel.Email" />
        </PWInputComponent>
    </PWInputRow>
    <PWInputRow>
        <PWInputComponent Title="Password">
            <InputText type="password" id="password" class="form-control" @bind-Value="LoginModel.Password" />
        </PWInputComponent>
    </PWInputRow>
    <PWSubmitButton />
    <PWButton Title="Cancel" OnClickCallback="OnCancelClickCallback" />
</EditForm>
