<EditForm Model="_loginModel" OnSubmit="ValidSubmit">
    <PWHeader>Login</PWHeader>
    <DataAnnotationsValidator />
    <PWValidationErrors Errors="@LoginState.Value.Errors.Select(x => x.Description).ToList()"></PWValidationErrors>
    <ValidationSummary />
    <PWInputRow>
        <PWInputComponent Title="Email">
            <InputText id="email" class="form-control" @bind-Value="_loginModel.Email" />
        </PWInputComponent>
    </PWInputRow>
    <PWInputRow>
        <PWInputComponent Title="Password">
            <InputText type="password" id="password" class="form-control" @bind-Value="_loginModel.Password" />
        </PWInputComponent>
    </PWInputRow>
    <PWSubmitButton />
    <PWButton Title="Cancel" OnClickCallback="OnCancelClickCallback" />
</EditForm>
