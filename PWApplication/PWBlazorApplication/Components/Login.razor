<EditForm EditContext="editContext" OnSubmit="ValidSubmit">
    <Header>Login</Header>
    <DataAnnotationsValidator />
    <ValidationSummary />
    <InputRow>
        <InputComponent Title="Email">
            <InputText id="email" class="form-control" @bind-Value="loginModel.Email" />
        </InputComponent>
    </InputRow>
    <InputRow>
        <InputComponent Title="Password">
            <InputText type="password" id="password" class="form-control" @bind-Value="loginModel.Password" />
        </InputComponent>
    </InputRow>
    <SubmitButton />
    <Button Title="Cancel" OnClickCallback="OnCancelClickCallback" />
</EditForm>
