<EditForm Model="_registerModel" OnSubmit="ValidSubmit">
    <PWHeader>Register</PWHeader>
	<DataAnnotationsValidator />
    <PWValidationErrors Errors="@RegisterState.Value.Errors.Select(x => x.Description).ToList()"></PWValidationErrors>
	<ValidationSummary />
    <PWInputRow>
        <PWInputComponent Title="Name">
            <InputText id="name" class="form-control" @bind-Value="_registerModel.Name" />
        </PWInputComponent>
    </PWInputRow>
    <PWInputRow>
        <PWInputComponent Title="Email">
            <InputText class="form-control" @bind-Value="_registerModel.Email" />
        </PWInputComponent>
    </PWInputRow>
    <PWInputRow>
        <PWInputComponent Title="Password">
            <InputText type="password" class="form-control" @bind-Value="_registerModel.Password" />
        </PWInputComponent>
    </PWInputRow>
    <PWInputRow>
        <PWInputComponent Title="Confirm password">
            <InputText type="password" class="form-control" @bind-Value="_registerModel.PasswordConfirm" />
        </PWInputComponent>
    </PWInputRow>
    <PWSubmitButton Title="Register" />
    <PWButton Title="Cancel" OnClickCallback="OnCancelClickCallback" />
</EditForm>
