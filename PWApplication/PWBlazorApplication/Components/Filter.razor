@using Microsoft.AspNetCore.Components;
@using Microsoft.AspNetCore.Components.Forms;
@using PWBlazorApplication.Models;

<EditForm Model="@FilterModel" OnSubmit="OnClickCallback">
    <InputRow>
        <FilterComponent Title="Start date">
            <InputDate class="form-control" @bind-Value="FilterModel.StartDate" />
        </FilterComponent>
        <FilterComponent Title="End date">
            <InputDate class="form-control" @bind-Value="FilterModel.EndDate" />
        </FilterComponent>
    </InputRow>
    <InputRow>
        <FilterComponent Title="Correspondent name">
            <InputText id="email" class="form-control" @bind-Value="FilterModel.CorrespondentName" />
        </FilterComponent>
    </InputRow>
    <InputRow>
        <FilterComponent Title="Start amount">
            <InputNumber name="Amount" class="form-control" @bind-Value="FilterModel.StartAmount" />
        </FilterComponent>
        <FilterComponent Title="End amount">
            <InputNumber name="Amount" class="form-control" @bind-Value="FilterModel.EndAmount" />
        </FilterComponent>
    </InputRow>
    <SubmitButton Title="Filter" />
</EditForm>

@code {
    [Parameter]
    public FilterModel FilterModel { get; set; }

    [Parameter]
    public EventCallback OnClickCallback { get; set; }
}
