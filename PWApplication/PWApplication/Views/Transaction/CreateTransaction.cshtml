@model PWApplication.ViewModels.CreateTransactionViewModel
<h2>Create transaction</h2>
<form method="post" asp-controller="Transaction" asp-action="CreateTransaction">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="RecipientName"></label><br />
        <select name="RecipientName" asp-items="@Model.Users" class="form-control" asp-for="RecipientName"></select>
        <span asp-validation-for="RecipientName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label><br />
        <input asp-for="Amount" class="form-control"/>
        <span asp-validation-for="Amount"></span>
    </div>
    <div>
        <input type="submit" class="btn btn-primary"  value="Create transaction" />
    </div>
</form>
